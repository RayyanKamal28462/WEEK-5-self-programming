int b=-15;
if (b>=1)
{
	  System.out.println ("The number you enter is :" + b);
	  System.out.println ("You enter the positive number");	
}		
else if (b<0)
{	
	  System.out.println ("The number you enter is :" + b);
	  System.out.println ("You enter the negative number");	
}
else 
{	
	  System.out.println ("The number you enter is :" + 0);
	  System.out.println ("You enter the zero number");	
}

}}

package selfprogramming;

public class Javacodemulltipleselection {

